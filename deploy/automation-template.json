{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "automationAccountName": {
            "type": "string",
            "metadata": {
                "description": "Name for the Azure Automation Account"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for the Automation Account"
            }
        },
        "tenantId": {
            "type": "string",
            "metadata": {
                "description": "Your Azure AD Tenant ID"
            }
        },
        "tenantDomain": {
            "type": "string",
            "metadata": {
                "description": "Your tenant domain (e.g., contoso.onmicrosoft.com)"
            }
        },
        "sharePointSiteUrl": {
            "type": "string",
            "metadata": {
                "description": "SharePoint site URL (e.g., https://contoso.sharepoint.com/sites/events)"
            }
        },
        "sharePointLibraryPath": {
            "type": "string",
            "metadata": {
                "description": "SharePoint library path (e.g., /sites/events/Shared%20Documents/EventData)"
            }
        },
        "excelFileName": {
            "type": "string",
            "defaultValue": "EventData_With_Organizer.xlsx",
            "metadata": {
                "description": "Name of the Excel file containing event data"
            }
        },
        "defaultOrganizerEmail": {
            "type": "string",
            "metadata": {
                "description": "Default organizer email for calendar events"
            }
        },
        "storageAccountName": {
            "type": "string",
            "metadata": {
                "description": "Storage account name for logging (must already exist)"
            }
        }
    },
    "variables": {
        "runbookName": "Calendar-Event-Automation"
    },
    "resources": [
        {
            "type": "Microsoft.Automation/automationAccounts",
            "apiVersion": "2020-01-13-preview",
            "name": "[parameters('automationAccountName')]",
            "location": "[parameters('location')]",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "sku": {
                    "name": "Basic"
                },
                "encryption": {
                    "keySource": "Microsoft.Automation"
                }
            }
        },
        {
            "type": "Microsoft.Automation/automationAccounts/variables",
            "apiVersion": "2015-10-31",
            "name": "[concat(parameters('automationAccountName'), '/TenantId')]",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccountName'))]"
            ],
            "properties": {
                "isEncrypted": false,
                "value": "[concat('\"', parameters('tenantId'), '\"')]",
                "description": "Azure AD Tenant ID"
            }
        },
        {
            "type": "Microsoft.Automation/automationAccounts/variables",
            "apiVersion": "2015-10-31",
            "name": "[concat(parameters('automationAccountName'), '/TenantDomain')]",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccountName'))]"
            ],
            "properties": {
                "isEncrypted": false,
                "value": "[concat('\"', parameters('tenantDomain'), '\"')]",
                "description": "Tenant domain for Exchange Online"
            }
        },
        {
            "type": "Microsoft.Automation/automationAccounts/variables",
            "apiVersion": "2015-10-31",
            "name": "[concat(parameters('automationAccountName'), '/SharePointSiteUrl')]",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccountName'))]"
            ],
            "properties": {
                "isEncrypted": false,
                "value": "[concat('\"', parameters('sharePointSiteUrl'), '\"')]",
                "description": "SharePoint site URL"
            }
        },
        {
            "type": "Microsoft.Automation/automationAccounts/variables",
            "apiVersion": "2015-10-31",
            "name": "[concat(parameters('automationAccountName'), '/SharePointLibraryPath')]",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccountName'))]"
            ],
            "properties": {
                "isEncrypted": false,
                "value": "[concat('\"', parameters('sharePointLibraryPath'), '\"')]",
                "description": "SharePoint library path"
            }
        },
        {
            "type": "Microsoft.Automation/automationAccounts/variables",
            "apiVersion": "2015-10-31",
            "name": "[concat(parameters('automationAccountName'), '/ExcelFileName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccountName'))]"
            ],
            "properties": {
                "isEncrypted": false,
                "value": "[concat('\"', parameters('excelFileName'), '\"')]",
                "description": "Excel file name"
            }
        },
        {
            "type": "Microsoft.Automation/automationAccounts/variables",
            "apiVersion": "2015-10-31",
            "name": "[concat(parameters('automationAccountName'), '/DefaultOrganizerEmail')]",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccountName'))]"
            ],
            "properties": {
                "isEncrypted": false,
                "value": "[concat('\"', parameters('defaultOrganizerEmail'), '\"')]",
                "description": "Default organizer email"
            }
        },
        {
            "type": "Microsoft.Automation/automationAccounts/variables",
            "apiVersion": "2015-10-31",
            "name": "[concat(parameters('automationAccountName'), '/StorageAccountName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccountName'))]"
            ],
            "properties": {
                "isEncrypted": false,
                "value": "[concat('\"', parameters('storageAccountName'), '\"')]",
                "description": "Storage account name for logging"
            }
        }

    ],
    "outputs": {
        "automationAccountName": {
            "type": "string",
            "value": "[parameters('automationAccountName')]"
        },
        "managedIdentityPrincipalId": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccountName')), '2020-01-13-preview', 'Full').identity.principalId]"
        },
        "resourceGroupName": {
            "type": "string",
            "value": "[resourceGroup().name]"
        },
        "nextSteps": {
            "type": "string",
            "value": "1. Install PowerShell modules (Microsoft.Graph, ImportExcel, ExchangeOnlineManagement, Az.Storage, Az.Accounts). 2. Create App Registration in Azure AD. 3. Upload certificate to both App Registration and Automation Account. 4. Configure API permissions. 5. Set up Sites.Selected permissions. 6. Upload the PowerShell runbook script."
        }
    }
}